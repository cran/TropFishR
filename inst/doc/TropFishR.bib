@article{He2011,
abstract = {The natural mortality rate (M) of fish varies with size and age, although it is often assumed to be constant in stock assessments. Misspecification of M may bias important assessment quantities. We simulated fishery data, using an age-based population model, and then conducted stock assessments on the simulated data. Results were compared to known values. Misspecification of M had a negligible effect on the estimation of relative stock depletion; however, misspecification of M had a large effect on the estimation of parameters describing the stock recruitment relationship, age-specific selectivity, and catchability. If high M occurs in juvenile and old fish, but is misspecified in the assessment model, virgin biomass and catchability are often poorly estimated. In addition, stock recruitment relationships are often very difficult to estimate, and steepness values are commonly estimated at the upper bound (1.0) and over-fishing limits tend to be biased low. Natural mortality can be estimated in assessment models if M is constant across ages or if selectivity is asymptotic. However if M is higher in old fish and selectivity is dome-shaped, M and the selectivity cannot both be adequately estimated because of strong interactions between M and selectivity.},
author = {He, Xi and Ralston, Stephen and MacCall, Alec D.},
file = {:Users/tobiasmildenberger/Documents/Mendeley Desktop/He, Ralston, MacCall/He, Ralston, MacCall - 2011 - Interactions of age-dependent mortality and selectivity functions in age-based stock assessment models.pdf:pdf},
isbn = {0090-0656},
issn = {00900656},
journal = {Fishery Bulletin},
number = {2},
pages = {198--216},
title = {{Interactions of age-dependent mortality and selectivity functions in age-based stock assessment models}},
volume = {109},
year = {2011}
}
