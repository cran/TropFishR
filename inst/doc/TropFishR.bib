journal = {Journal of Shellfish Research},
keywords = {australia,gompertz,growth,haliotis rubra,inverse logistic,von bertalanffy},
number = {1},
pages = {223--235},
title = {{Growth Models for Fisheries: The Effect of Unbalanced Sampling Error On Model Selection, Parameter Estimation, and Biological Predictions}},
