journal = {Palaeogeography, Palaeoclimatology, Palaeoecology},
keywords = {Bivalve,Growth model,Otolith,Sclerochronology,Temporal alignment,Von Bertalanffy growth function},
pages = {763--776},
publisher = {Elsevier B.V.},
title = {{Food for thought: Mathematical approaches for the conversion of high-resolution sclerochronological oxygen isotope records into sub-annually resolved time series}},
